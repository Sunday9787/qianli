#product-detail
  position relative
  // padding 80px 0 80px
  padding 140px 0 80px
  background-image url(/image/proXq_bg.png)
  background-repeat no-repeat
  background-size cover

.product-detail__head
  position relative
  margin-bottom 50px
  border-bottom 1px solid #e6e8ef

.product-detail__content
  position relative

.product-detail-parts
  max-height 270px
  padding-right 40px
  overflow-y auto

.product-detail__item
  margin-bottom 15px
  font-size 16px
  text-transform uppercase

.product-detail-part
  display block
  margin-bottom 10px
  font-size 24px
  font-weight bold

.product-detail-title
  position relative
  z-index 2
  display block
  margin-bottom 20px
  font-size 21px
  font-weight bold
  line-height 1
  color rgba(1, 5, 15, 0.8)

.product-detail-subtitle
  position relative
  display block
  margin-bottom 64px
  font-size 26px
  font-weight bold
  color #01050F
  text-transform uppercase
  > i
    margin-left 10px
    font-size 26px
    font-style normal
    line-height 1.2
    color #796baf
    text-transform uppercase

.product-detail-inner
  width 84%
  margin 0 auto

.product-detail-banner
  display flex
  margin-top 60px

  &__content
    position relative
    width: 50%
    padding-right 5%
  &__swiper
    position relative
    width: 50%

.product-detail-slide
  position relative
  padding-top 65%

  > img
    position absolute
    top 50%
    left 50%
    object-fit contain
    height 100%
    transform translate(-50%, -50%)

.product-detail-swiper
  width 100%

  &__preview
    position absolute
    top 50%
    right 0
    z-index 2
    width 130px
    height 465px
    transform translateY(-50%)

  &__preview-slide
    position relative
    display flex
    align-items center
    justify-content center
    width 100%
    height 100%
    border 1px solid #d7d5e4
    border-radius 4px

.product-detail-play
  position absolute
  top 50%
  left 50%
  display block
  width 40px
  transform translate(-50%, -50%)

.product-detail-swiper__preview
  .swiper-slide.swiper-slide-thumb-active
    .product-detail-swiper__preview-slide
      border 3px solid #453780

.product-detail-dialog-container
  position fixed
  top 0
  left 0
  z-index 999
  display none
  width 100%
  height 100vh
  background-color rgba(0, 0, 0, 0.68)

.product-detail-dialog
  position absolute
  top 50%
  left 50%
  width 45%
  transform translate(-50%, -50%)

  &__content
    position relative

  &__footer
    position absolute
    bottom 24px
    left 50%
    display flex
    justify-content center
    transform translateX(-50%)

    .close
      display block
      width 40px

#product-detail-feature
  padding 98px 0

.product-detail-feature-swiper
  position relative

  .swiper-container
    padding-bottom 100px
  .swiper-pagination
    bottom 0
  .swiper-pagination-bullet
    background-color #d7d8da
    border-radius 40px
    opacity 1
    transition all ease .3s
  .swiper-pagination-bullet-active
    width 40px
    background-color #453780

  .prev
    left -70px
  .next
    right -70px
  .prev
  .next
    position absolute
    top 50%
    width 36px
    transform translateY(-50%)

.product-detail-feature__slide
  position relative
  padding 80px 48px 180px
  overflow hidden
  text-align center
  border 1px solid #e3e3e3

.product-detail-feature
  position relative

  &__icon
    width 88px
    margin 0 auto
    margin-bottom 80px

  &__title
    min-height 64px
    font-size 22px
    @apply line-clamp-2
  &__desc
    min-height 54px
    @apply line-clamp-2
    font-weight 200

  &__index
    position absolute
    bottom -20px
    left 50%
    z-index 2
    font-size 160px
    font-weight bold
    line-height 0.8
    color #f8f8f8
    transition all .48s .48s
    transform translateX(-50%)

#product-detail-env
  padding 98px 0
  background-color #f3f5f8

.product-detail-env-banner
  position relative
  display flex
  background-repeat no-repeat

.product-detail-env-slide
  position relative
  z-index 2
  padding-top 38.5%
  transition all .48s

  &:hover
    &:after
      opacity 1

    .product-detail-env-slide__wrapper
      transform translate(-50%, 0%)

  &:after
    position absolute
    inset 0
    display block
    content ''
    background-color rgba(137,115,234,48%)
    opacity 0
    transition all .48s

  &__icon
    width 50px
    margin 0 auto

  &__wrapper
    position absolute
    top 50%
    left 50%
    z-index 2
    text-align center
    transition all .48s
    transform translate(-50%, -50%)

  &__text
    position relative
    display inline-block
    margin-top 25px
    font-size 18px
    font-style normal
    color #fff

    &:after
      position absolute
      bottom 0
      left 50%
      width 28px
      height 2px
      content ''
      background #fff
      opacity 0
      transition all .48s
      transform translateX(-50%)

#product-detail-spec
  padding 98px 0

.product-detail-table
  width 100%
  table-layout fixed
  border-collapse collapse

  &__row
    &:nth-child(odd)
      background-color #E0DBED
    &:nth-child(even)
      background-color #F9F7FB
  &__cell
    padding 10px 50px

    &.label
      font-size 20px
      font-weight bold
      color #302777
    &.value
      font-size 20px
      border-left 2px solid #fff
