#about-banner
  position relative
  width 100%
  padding 80px 0 140px
  background-image url(//localhost:3000/image/about_banner_bg.png)
  background-repeat no-repeat
  background-size cover

.about-banner-container
  width 84%
  margin 0 auto

.about-banner-inner
  display flex
  align-items center

.about-banner-content
  padding-right 5%

.about-banner-subtitle
  margin 60px 0
  font-size 30px
  font-weight bold
  color #766cab

.about-banner-desc
  margin-bottom 20px
  font-size 16px
  line-height 1.8;
  color #8b8c8f
  letter-spacing 1.5px

.about-banner-wallpaper
  position relative
  width 46%
  padding-top 47%
  > img
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    object-fit cover

#about-environment
  padding 98px 0
  background #f6f8fa

.about-environment-title
  text-align center

.about-environment-slide
  position relative;
  padding-top: 40%

  > img
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    object-fit cover

.about-environment__swiper-button
  position absolute
  top 50%
  z-index 6
  width 36px
  transform translateY(-50%)

  &.prev
    left 32px
  &.next
    right 32px

#about-patent
  padding 98px 0

.about-patent-container
  width 84%
  margin 0 auto

.about-patent-swiper
  padding 0 10%

.about-patent-title
  text-align center

.about-patent-slide
  text-align center

  &__img
    position relative
    padding-top 136%
    transition all 480ms
    transform scale(0.7)

    > img
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      object-fit cover

  &__title
    display block
    margin-top 40px
    margin-bottom 5px
    font-size 21px
    opacity 0
    transition all 480ms
  &__desc
    font-size 12px
    color #7f8187
    opacity 0
    transition all 480ms

.about-patent-swiper
  position relative
  padding 0 10%

  .swiper-slide.swiper-slide-active
    .about-patent-slide__img
      transform scale(1)

    .about-patent-slide__title
    .about-patent-slide__desc
      opacity 1

.about-patent-pagination
  position absolute
  top 50%
  right 0
  left 0
  transform translateY(-50%)

.about-patent__swiper-button
  position absolute
  display block
  display flex
  column-gap 10px
  align-items center
  width 20px
  text-transform uppercase

  &.prev
    left 0
  &.next
    right 0

#about-partner
  padding 98px 0
  background-color rgb(249,251,252)

.about-partner-container
  width 84%
  margin 0 auto

.about-partner-head
  display flex

.about-partner__button-group
  display flex
  column-gap 15px
.about-partner__button
  width 46px

.about-partner-swiper
  position relative
  border-top 1px solid #e0e1e2
  border-left 1px solid #e0e1e2

.about-partner-slide
  position relative
  border-right 1px solid #e0e1e2
  border-bottom 1px solid #e0e1e2

  &__img
    position relative
    padding-top 52%
    > img
      position absolute
      top 25%
      left 25%
      width 50%
      height 50%
      object-fit contain
