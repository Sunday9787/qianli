.qianli-badge-title
  position relative
  margin-bottom 40px
  font-size 38px
  line-height 1.2
  color #010510

  &[center]
    text-align center
  &[right]
    text-align right
  &[large]
    .qianli-badge-title__en
      margin-bottom 20px
      font-size 55px

  &__en
    position relative
    margin-bottom 10px

    b:last-of-type
      position relative
      margin-left 10px

      &:after
        position absolute
        right 0
        bottom 0
        width 100%
        height 17px
        content ''
        background linear-gradient(88deg, #5949A0, #8973EA)
        opacity 0.2
