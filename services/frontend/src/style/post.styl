#post-center
  padding 108px 0 108px

.post-inner
  display flex
  column-gap 10%
  width 84%
  padding-top 30px
  margin 0 auto

.post-content
  padding-right 5%
  border-right 1px solid #f3f3f3

.post-content-head
  position relative
  padding 30px 0 20px
  border-bottom 1px solid #f3f3f3

.post-title
  font-size 30px
  font-weight 100
  color #333

.post-meta
  display flex
  column-gap 10px
  margin-top 30px
  font-size 15px
  font-weight 100
  color #333

.post-article
  padding 40px 10px 28px
  border-bottom 1px solid #eee

  > p
    font-size 15px
    line-height 36px
    color #666
    text-indent 2em
    letter-spacing 0.5px

.post-recommend
  width 300px

.post-recommend-title
  margin-bottom 25px
  font-size 20px
  line-height 1.4
  color #111

.post-recommend-inner
  & + &
    margin-top 20px

.post-recommend-item
  display flex
  column-gap 20px
  align-items center

.post-recommend-cover
  position relative
  width 140px
  height 80px
  object-fit cover
