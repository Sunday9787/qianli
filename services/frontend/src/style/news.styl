#news-center
  position relative
  min-height 100vh
  padding 140px 0 80px
  background #F5F5F4

  &:after
    position absolute
    top 0
    left 0
    z-index 0
    width 100%
    height 100%
    content ''
    background url(//localhost:3000/image/new_bg.png)
    background-repeat no-repeat
    background-size contain

.news-center-inner
  position relative
  z-index 1
  display flex
  justify-content space-between
  width 84%
  padding 50px 3% 100px
  margin 0 auto
  border-bottom 1px solid #E1E1E1

.news-center-content
  position relative
  width 50%

.news-post
  margin-top 140px
  margin-bottom 40px

.news-post-title
  margin-bottom 20px
  font-size 32px
  font-weight bold

.news-center-cover
  width: 45%
.news-center-cover__inner
  position relative
  padding-top 82%
  border-radius 4px

  > img
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    transition all .48s
    object-fit cover

#news-container
  position relative
  z-index 2
  padding-bottom 60px
  background #F5F5F4

.news-inner
  width 84%
  margin 0 auto

.news-item
  display flex
  align-items center
  justify-content space-between
  width 100%
  padding 50px 60px
  margin-bottom 20px
  background #fff
  transition all .48s

.news-item-content
  position relative
  display block
  width 65%

.news-item-cover
  position relative
  width 30%
  padding-top 18%
  > img
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    transition all .48s
    object-fit cover

.news-item-category
  display block
  margin-bottom 20px
  font-size 21px
  font-weight bold
  color #7B6CAD

.news-item-title
  min-height 78px
  margin-bottom 60px
  overflow hidden
  font-size 24px
  color #555
  text-overflow ellipsis
  transition all .48s
  -webkit-box-orient vertical
  -webkit-line-clamp 2

.news-item-date
  font-size: 16px

.news-item-icon
  position absolute
  right 0
  bottom 0
  width 30px
  height 30px
