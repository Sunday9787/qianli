{
  "vueCompilerOptions": {
    "plugins": [
      "@volar/vue-language-plugin-pug"
    ]
  },
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue","./*.config.ts"],
  "exclude": ["src/**/__tests__/*"],
  "jsx": "preserve",
  "lib": ["ES2020", "DOM", "DOM.Iterable"],
  "compilerOptions": {
    "composite": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
