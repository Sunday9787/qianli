.header
  position fixed
  top 0
  left 0
  z-index 999
  width 100%
  transition all 480ms

  &:hover
    background-color #fff

    .header-nav-item
      @apply text-gray-700

  &.pin
    background #fff
    border-bottom none
    box-shadow 0 0px 2px 0 rgba(0, 0, 0, 18%)
    .header-nav-item
      padding 24px 38px

.header-inner
  position relative
  display flex
  align-items center
  width 90%
  margin: 0 auto
  border-bottom 1px solid rgba(255, 255, 255, 20%)

.header-logo
  width 210px
  cursor pointer

.header-nav
  display flex

  &-item
    display inline-block
    padding 30px 28px
    font-size 16px
    transition all .48s
    @apply text-white

#solve-container
  position relative
  height 100vh
  margin-top 100vh

#solve-item
  position absolute
  bottom 10%
  left 8%
  width 84%

  .swiper-slide-thumb-active
    .solve-item-card
      background #453780

.solve-item-card
  display flex
  align-items center
  justify-content space-between
  background rgba(250,250,250,20%)
  transition all .48s
  @apply backdrop-blur-sm

  @screen md
    &
      padding 30px 20px
  @screen xl
    &
      padding 30px 25px
  @screen xxl
    &
      padding 42px 48px

  &__title
    margin-bottom 10px
    font-size 24px
    font-weight bold
    line-height 1
    color #fff

  &__desc
    font-size 16px
    font-style normal
    color rgba(255,255,255,60%)

  &__icon
    width 38px
    height 38px
    object-fit contain

.solve-button
  position absolute
  top 50%
  z-index 2
  width 55px
  transform translateY(-50%)

  &.next
    right -100px

  &.prev
    left -100px
