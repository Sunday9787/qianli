.header
  position fixed
  top 0
  left 0
  z-index 999
  width 100%
  transition all 480ms

  &:hover
    background-color #fff

    .header-nav-item
      @apply text-gray-700

  &.pin
    background-color #fff
    border-bottom none
    box-shadow 0 0px 2px 0 rgba(0, 0, 0, 18%)

    .header-nav-item
      padding 24px 38px
      @apply text-gray-700

.header-inner
  position relative
  display flex
  align-items center
  width 90%
  margin: 0 auto
  border-bottom 1px solid rgba(255, 255, 255, 20%)

.header-logo
  width 210px
  cursor pointer

.header-nav
  display flex

  &-item
    display inline-block
    padding 30px 28px
    font-size 16px
    transition all .48s
    @apply text-white
